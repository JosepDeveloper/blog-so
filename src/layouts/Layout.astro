---
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'
import '@fontsource-variable/montserrat'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="¡Explora el fascinante mundo de los sistemas operativos y el mantenimiento de computadoras en nuestro blog! Descubre consejos expertos, guías paso a paso y soluciones prácticas para optimizar el rendimiento de tu equipo y resolver problemas técnicos. ¡Únete a nuestra comunidad y conviértete en un experto en el mantenimiento informático!"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <title>{title}</title>

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://blog-so-six.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Blog Sistemas Operativos | Reparacion y Mantenimiento del computador"
    />
    <meta
      property="og:description"
      content="¡Explora el fascinante mundo de los sistemas operativos y el mantenimiento de computadoras en nuestro blog! Descubre consejos expertos, guías paso a paso y soluciones prácticas para optimizar el rendimiento de tu equipo y resolver problemas técnicos. ¡Únete a nuestra comunidad y conviértete en un experto en el mantenimiento informático!"
    />
    <meta property="og:image" content="/image-web.jpg" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="blog-so-six.vercel.app" />
    <meta property="twitter:url" content="https://blog-so-six.vercel.app/" />
    <meta
      name="twitter:title"
      content="Blog Sistemas Operativos | Reparacion y Mantenimiento del computador"
    />
    <meta
      name="twitter:description"
      content="¡Explora el fascinante mundo de los sistemas operativos y el mantenimiento de computadoras en nuestro blog! Descubre consejos expertos, guías paso a paso y soluciones prácticas para optimizar el rendimiento de tu equipo y resolver problemas técnicos. ¡Únete a nuestra comunidad y conviértete en un experto en el mantenimiento informático!"
    />
    <meta name="twitter:image" content="/image-web.jpg" />
  </head>
  <body>
    <div>
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
    font-family:
      'Montserrat Variable',
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
    background-color: #20252c;
  }

  div {
    max-width: 80vw;
    height: 100%;
    margin: 0 auto;
  }

  h1,
  h2,
  h3,
  h4 {
    text-wrap: balance;
  }

  p {
    text-wrap: pretty;
  }
</style>
